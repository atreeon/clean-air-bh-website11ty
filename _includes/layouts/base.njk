<!doctype html>
<html lang="{{ metadata.language }}">
	<head>
		<link rel="stylesheet" href="/css/index.css">
		<link rel="stylesheet" href="/css/prism-diff.css">
		<link rel="stylesheet" href="/css/prism-okaidia.css">
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>{{ title or metadata.title }}</title>
		<meta name="description" content="{{ description or metadata.description }}">

		{#- Atom and JSON feeds included by default #}
		<link rel="alternate" href="/feed/feed.xml" type="application/atom+xml" title="{{ metadata.title }}">
		<link rel="alternate" href="/feed/feed.json" type="application/json" title="{{ metadata.title }}">

		{#- Uncomment this if youâ€™d like folks to know that you used Eleventy to build your site!  #}
		{#- <meta name="generator" content="{{ eleventy.generator }}"> #}
	</head>
	<body>
		<a href="#skip" class="visually-hidden">Skip to main content</a>

		{# get current page #}
		{% set currentItem = collections.all | getCurrentItem(page.url) %}
		<header>
			<a href="/" class="home-link">{{ metadata.title }}</a>

			{#- Read more about `eleventy-navigation` at https://www.11ty.dev/docs/plugins/navigation/ #}
			<nav>
				<h2 class="visually-hidden">Top level navigation menu</h2>
				<ul class="nav">
				{% set topItems = collections.all | getTopLevel %}
				{%- for entry in topItems %}
					<li class="nav-item"><a href="{{ entry.url }}"{% if (entry.url == page.url) or (entry.isKeyParent == true) %} aria-current="page"{% endif %}>{{ entry.title }}</a></li>
				{%- endfor %}
				</ul>
			</nav>
		</header>

		{# get children #}
		{% set children = collections.all | getChildren(currentItem.key) %}
		{% if children.length > 0 %}
		<header>
		  <nav>
			{%- for entry in children %}
				<li class="nav-item"><a href="{{ entry.url }}">{{ entry.key }}</a></li>
			{%- endfor %}
		  </nav>
		</header>
		{% endif %}

		<main id="skip">
			{{ content | safe }}
		</main>

		<footer></footer>

		<!-- Current page: {{ page.url | htmlBaseUrl }} -->
	</body>
</html>

